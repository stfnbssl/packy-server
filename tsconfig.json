{
	"compilerOptions": {
		"allowJs": true,
		// "baseUrl": "./",
		"checkJs": true,
		"forceConsistentCasingInFileNames": true,
		"lib": [
			"es6", "dom"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		// "noEmit": true,
		"noImplicitAny": true,
		"noImplicitThis": false,
		"outDir": "./bin",
		"sourceMap": true,
		"strict": true,
		"strictFunctionTypes": false,
		"strictNullChecks": true,
		"target": "es2017",
		"typeRoots": [ "node_modules/@types", "src/typings" ],
		"types": [
			"node"
		], 
		
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}